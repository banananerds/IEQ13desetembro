<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#168BC34A"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Cabeçalho -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ministério de Teatro"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IEQ 13 de Setembro"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginBottom="30dp" />

        <!-- Card de Próximos Eventos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Próximos Eventos"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/textEvento1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Ensaio Geral - Sábado 15h"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/textEvento2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Peça: O Filho Pródigo - Domingo 19h"
                android:textSize="16sp"
                android:textColor="#000000" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informações"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Líder: Irmão João"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Contato: (11) 99999-9999"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Local: Salão Principal"
                android:textSize="16sp"
                android:textColor="#000000" />

        </LinearLayout>

        <!-- Botão de Participar -->
        <Button
            android:id="@+id/btnParticipar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quero Participar"
            android:layout_gravity="center"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />

    </LinearLayout>

</ScrollView>